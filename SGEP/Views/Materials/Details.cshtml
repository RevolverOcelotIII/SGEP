@model SGEP.Models.Material

@{
    ViewData["Title"] = "Detalhes do Material";
}

<h3 class="display-4 mt-5 mb-5 text-center">Detalhes</h3>
<hr />
<div class="justify-content-center">
    <h4>Material</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade) @Html.DisplayFor(model => model.Unidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a role="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a role="button" class="btn btn-danger" asp-action="Index">Back to List</a>
</div>
